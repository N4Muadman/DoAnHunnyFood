<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#070707" /> <!-- Màu nền của TextInputEditText -->
        </shape>
    </item>

    <!-- Left border -->
    <item android:top="1dp" android:bottom="1dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#CAC7C7" />
            <size android:width="1dp" />
        </shape>
    </item>

    <!-- Right border -->
    <item android:top="1dp" android:bottom="1dp" android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#D3D1D1" />
            <size android:width="1dp" />
        </shape>
    </item>
</layer-list>